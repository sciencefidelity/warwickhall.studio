# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

# html
[*.html]
indent_size = 2

# Vue
[*.vue]
indent_size = 2

# TypeScript, JavaScript
[*.{ts,js}]
indent_size = 2

# scss
[*.scss]
indent_size = 2

# json
[*.json]
indent_size = 2
