---
import { Markdown } from 'astro/components';
---

<header class="site-header">
  <div class="hero-container">
    <picture>
      <source srcset="assets/img/jess-studio.webp" type="image/webp">
      <source srcset="assets/img/jess-studio.jpg" type="image/jpeg">
      <img class="hero-image" src="assets/img/jess-studio.jpg" alt="" width="1200" height="800" />
    </picture>
  </div>
</header>

<style lang="scss">
  .hero-container {
    margin: 3rem 22% 0 0;
    height: 70vh;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    margin: auto;
    object-fit: cover;
  }

  @media only screen and (min-width: 1421px) {
    .hero-container {
      margin: 3rem 30% 0 0;
    }
  }

  @media only screen and (max-width: 1099px) {
    .hero-container {
      margin: 3rem 11.5% 0 0;
    }
  }

  @media only screen and (max-width: 887px) {
    .hero-container {
      margin: 2rem 11.5% 0 0;
    }
  }

  @media only screen and (max-width: 714px) {
    .hero-container {
      height: 56vh;
      margin: 1.5rem 11.5% 0 0;
    }
  }

  @media only screen and (max-width: 600px) {
    .hero-container {
      margin: 0 11.5% 0 0;
    }
  }

  @media only screen and (max-width: 467px) {
    .hero-container {
      height: 45vh;
      margin: 0;
    }
  }
</style>
