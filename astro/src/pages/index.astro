---
// Component Imports
import Tour from "../components/Tour.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"

// Component Script:
let title = "My Astro Site"
---
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="stylesheet" href={Astro.resolve('sanitize.css/sanitize.css')}>
    <link rel="stylesheet" href={Astro.resolve('sanitize.css/assets.css')}>
    <link rel="stylesheet" href={Astro.resolve('sanitize.css/reduce-motion.css')}>
    <link rel="stylesheet" href={Astro.resolve('sanitize.css/typography.css')}>
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>

    <style>
      header {
        display: flex;
        flex-direction: column;
        gap: 1em;
        max-width: min(100%, 68ch);
      }
    </style>
  </head>
  <body>

    <Header />
    <main>
      <Tour />
    </main>
    <Footer />

  </body>
</html>
