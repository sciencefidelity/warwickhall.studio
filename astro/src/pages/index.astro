---
import "normalize.css"
import Content from "../components/Content.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"
---
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Warwick Hall Studios | affordable artists studios in Cardiff</title>
  <meta name="Description" content="An artist led initiative providing high quality studio accommodation for artists and makers in Cardiff." />

  <link rel="preload" href="./assets/fonts/gtalpina-bold-sub.woff2" as="font" type="font/woff2" crossorigin />
  <link rel="preload" href="./assets/fonts/gtalpina-regular-lat.woff2" as="font" type="font/woff2" crossorigin />
  <link rel="preload" href="./assets/fonts/bananagrotesk-bold-sub.woff2" as="font" type="font/woff2" crossorigin />
  <link rel="preload" href="./assets/fonts/bananagrotesk-regular-lat.woff2" as="font" type="font/woff2" crossorigin />

  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="mask-icon" href="/mask-icon.svg" color="#CF99FF" />

  <meta name="theme-color" content="#1B1C1F" />
</head>

<body>
  <Header />
  <Content />
  <Footer />
</body>
</html>

<style lang="scss" global>
@use '../styles/breakpoints' as b;
@import "../../node_modules/normalize.css/normalize.css";

:root {
  --dark: hsl(225, 7%, 11%);
  --light: hsl(0, 0%, 96%);
  --dark-blue: hsla(204, 100%, 27%, 0.7);
  --yellow: hsl(48, 100%, 80%);
  --purple: hsl(272, 100%, 80%);
  --light-blue: hsl(216, 100%, 80%);
  --mint: hsl(168, 100%, 80%);
}


@font-face {
  font-family: "GT Alpina";
  src: url(./fonts/gtalpina-bold-sub.woff2) format("woff2");
  font-weight: 700;
  font-size: normal;
  font-display: swap;
}

@font-face {
  font-family: "GT Alpina";
  src: url(./fonts/gtalpina-regular-lat.woff2) format("woff2");
  font-weight: 400;
  font-size: normal;
  font-display: swap;
}

@font-face {
  font-family: "Banana Grotesk";
  src: url(./fonts/bananagrotesk-bold-sub.woff2) format("woff2");
  font-weight: 700;
  font-size: normal;
  font-display: swap;
}

@font-face {
  font-family: "Banana Grotesk";
  src: url(./fonts/bananagrotesk-regular-lat.woff2) format("woff2");
  font-weight: 400;
  font-size: normal;
  font-display: swap;
}

html {
  font-family: "Banana Grotesk",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

* {
  box-sizing: border-box;
  margin: 0;
  &::before,
  &::after {
    box-sizing: border-box;
  }
}

body {
  background: var(--dark);
  color: var(--light);
  font-size: 1.375rem;
  @include b.mq(e) {
    font-size: 1.25rem;
  }
  @include b.mq(d) {
    font-size: 1.175rem;
  }
  @include b.mq(d) {
    font-size: 1.175rem;
  }
  @include b.mq(c) {
    font-size: 1.1rem;
  }
}

p {
  line-height: 1.5;
  font-family: "GT Alpina", serif;
  @include b.mq(b) {
    font-size: 1rem;
    line-height: 1.6;
  }
}

h1 {
  font-family: "GT Alpina", serif;
  font-size: 4.5rem;
  margin: 0;
  color: var(--yellow);
  @include b.mq(e) {
    font-size: 4rem;
  }
  @include b.mq(d) {
    font-size: 3rem;
  }
  @include b.mq(c) {
    font-size: 2.875rem;
  }
  @include b.mq(b) {
    font-size: 2.4rem;
  }
  @include b.mq(a) {
    font-size: 2rem;
  }
  @media only screen and (min-width: 1421px) {
    font-size: 6rem;
  }
}

h2 {
  font-size: 2.25rem;
  @include b.mq(f) {
    font-size: 2.25rem;
  }
  @include b.mq(e) {
    font-size: 1.8rem;
  }
  @include b.mq(d) {
    font-size: 1.5rem;
  }
  @include b.mq(c) {
    font-size: 1.875rem;
  }
  @include b.mq(b) {
    font-size: 1.65rem;
  }
  @include b.mq(a) {
    font-size: 1.375rem;
  }
  @media only screen and (min-width: 1421px) {
    font-size: 3rem;
  }
}

a {
  text-underline-offset: 0.25em;
}

.screen-reader-text {
  border: 0;
  clip: rect(1px, 1px, 1px, 1px);
  clip-path: inset(50%);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute !important;
  width: 1px;
  word-wrap: normal !important;
}

.screen-reader-text:focus {
  background-color: hsl(0, 0%, 95%);
  border-radius: 3px;
  box-shadow: 0 0 2px 2px hsla(0, 0%, 0%, 0.6);
  clip: auto !important;
  clip-path: none;
  color: hsl(199, 65%, 37%);
  display: block;
  font-size: 0.875rem;
  font-weight: 700;
  height: auto;
  left: 5px;
  line-height: normal;
  padding: 15px 23px 14px;
  text-decoration: none;
  top: 5px;
  width: auto;
  z-index: 100000;
}
</style>
